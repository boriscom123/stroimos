<!DOCTYPE html>
<html lang="ru" {{ sonata_seo_html_attributes() }}>
<head {{ sonata_seo_head_attributes() }}>
    <meta charset="UTF-8">
    {% block title %}{{ sonata_seo_title() }}{% endblock %}
    {% block metadatas %}{{ sonata_seo_metadatas() }}{% endblock %}
    {% block head_extra_link %}{% endblock %}
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/favicon/apple-touch-icon.png') }}">
    <link rel="shortcut icon" href="{{ asset('images/favicon/favicon.ico') }}" type="image/x-icon" />
    <link rel="icon" href="{{ asset('images/favicon/favicon.svg') }}" type="image/svg+xml">
    <link rel="icon" href="{{ asset('images/favicon/favicon.ico') }}" sizes="any">
    <link rel="manifest" href="{{ asset('images/favicon/site.webmanifest') }}">
    <link rel="mask-icon" href="{{ asset('images/favicon/safari-pinned-tab.svg') }}" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    {% block stylesheets %}
        <link href="{{ asset('css/gsk_static_subordinate.css') }}" type="text/css" rel="stylesheet" media="screen"/>
    {% endblock %}

    {% if sendsay_account %}
        {% include ':layout:push_notifications.html.twig' %}
    {% endif %}
</head>
<body class="{% block bodyClass %}{% endblock %}">
{% block body %}{% endblock %}
{% block javascripts %}
    {# todo: Наверное, нужно собирать отдельный js #}
    <script src="//api-maps.yandex.ru/2.1/?coordorder=longlat&lang=ru_RU" type="text/javascript"></script>
    <script src="{{ asset('js/gsk_static_subordinate.js') }}" type="text/javascript"></script>
{% endblock %}
{# todo: подумать как жить с этим, а потом убить #}
<link href="{{ asset('css/defaults.css') }}" type="text/css" rel="stylesheet" media="screen"/>
{% include '::/layout/counters.html.twig' %}
</body>
</html>
