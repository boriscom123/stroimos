{% extends ":layout:layout.html.twig" %}

{% block content %}
    {% include '::/widgets/themes_panel.html.twig' with {
    'title': '',
    'rubricsContext': '',
    } %}
    <h1 class="error-report__title">Анкета</h1>

    {#тут можно вытащить верстку сообщений из профиля пользователя#}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="error-report">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}