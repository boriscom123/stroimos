<div class="themes-fixed__menu-drop-wrap" tabindex="-1">
    <nav class="themes-fixed__menu-drop themes-fixed__menu-drop__columns" data-columns>
        {% for item in items %}
            <div class="themes-fixed__menu-drop-item {% if item.title == currentItemTitle %}active{% endif %}">
                <a href="{{ path(route, routeParams|merge({rubric: item.title})) }}">
                    {{ item.title }}
                </a>
            </div>
        {% endfor %}
    </nav>
</div>
