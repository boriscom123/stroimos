{% if items is not empty %}
    <tr>
        <td style="width: 10%; background: #222;"></td>
        <td style="width: 80%; background: white; padding: 0 30px;">
            <br /><br />
            <h2 style="font-family: Arial, Helvetica, sans-serif; font-weight: bold; font-size: 25px; color: #202020;">{{ title }} за {{ content.date|format_date('d MMMM Y') }}</h2>
        </td>
        <td style="width: 10%; background: #222;"></td>
    </tr>
    {% for item in items %}
        <tr>
            <td style="width: 10%; background: #222;"></td>
            <td style="width: 80%; background: white; padding: 0 30px; border-bottom: 1px solid #eee;">
                <br />
                <h3 style="font-family: Arial, Helvetica, sans-serif; font-weight: bold; font-size: 18px; line-height: 25px; color: #202020;">{{ item.title }}</h3>
                {% if item.teaser is defined %}
                <p style="font-family: Times New Roman, serif; font-weight: normal; font-size: 18px; line-height: 22px; color: #222;">{{ item.teaser }}</p>
                {% endif %}
                <a href="{{ entity_path(item) }}" style="font-family: Arial, Helvetica, sans-serif; font-weight: 600; font-size: 16px; line-height: 22px; display: inline-block; padding: 20px 0 30px; clear: both; color: #222;">Читать на сайте</a>
                <br /><br /><br />
            </td>
            <td style="width: 10%; background: #222;"></td>
        </tr>
    {% endfor %}
{% endif %}
