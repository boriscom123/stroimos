{% set  hasCityDistrict = false %}
{% set schemeAndHost = request.getSchemeAndHttpHost() %}

<tr>
    <td valign="middle" align="center" class="newsItem" style="-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; mso-table-lspace: 0pt; mso-table-rspace: 0pt; padding-top: 40px; padding-bottom: 30px; border-bottom: 1px solid #A6A6A6;">
        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; mso-table-lspace: 0pt; mso-table-rspace: 0pt; font-size: 14px; font-weight: lighter; border-collapse: collapse !important;">
            <tr>
                <td class="newsItemSmallLeftContent" valign="top" align="left" style="-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; mso-table-lspace: 0pt; mso-table-rspace: 0pt; padding: 0 20px 0 0;"> 
                    <table border="0" cellpadding="0" cellspacing="0" width="100%" style="-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; mso-table-lspace: 0pt; mso-table-rspace: 0pt; font-size: 14px; font-weight: lighter; border-collapse: collapse !important;">
                        <tr>
                            <td valign="top" align="left" class="newsItemTitle" style="-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; mso-table-lspace: 0pt; mso-table-rspace: 0pt; color: #1B262C; font-family: Arial,serif; font-size: 18px; font-weight: bold; line-height: 110%; padding-bottom: 10px; text-decoration: none !important;">
                                <a href="{{ entity_absolute_url(post.post) | url_hash_utm_fix(url_utm) }}" class="newsItemTitleLink" style="-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; color: #1B262C; text-decoration: none !important;">
                                    <span class="newsItemTitleLink" style="color: #1B262C; text-decoration: none !important;">{{ post.post.title }}</span> 
                                </a>
                            </td> 
                        </tr> 
