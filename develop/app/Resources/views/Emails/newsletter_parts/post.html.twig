                    </table>
                </td>
                <td valign="top" align="left" class="newsItemSmallLeftImage" style="-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; mso-table-lspace: 0pt; mso-table-rspace: 0pt;">
                    <a href="{{ entity_absolute_url(post.post) | url_hash_utm_fix(url_utm) }}" style="-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%;"><img src="{% path post.post.image, 'newsletter_post' %}" alt width="140" height="100" style="-ms-interpolation-mode: bicubic; display: block; border: 0; height: 100px; line-height: 100%; outline: none; text-decoration: none;"></a>
