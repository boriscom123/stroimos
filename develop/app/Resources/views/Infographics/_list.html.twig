<data-map data-source="{{ block_path(block, context) }}" id="data-map"></data-map>
<div class="infographics-block__wrapper">
    <div class="infographics-block__list">
        {% for item in infographics %}
            {% include '::Infographics/_teaser.html.twig' %}
        {% endfor %}
    </div>

    {% if next_offset %}
        {% include '::/Block/loadmore_button.html.twig' with {
        title: 'Ещё',
        target: '.infographics-block__list',
        item: '.infographics-block',
        source: block_path(block, context, {template: 'ajax_list'}),
        limit: limit,
        offset: next_offset
        } %}
    {% endif %}
</div>
