{% extends "::layout/layout.html.twig" %}

{% block subscribe_form %}
    {{ sonata_block_render({'type': 'email_subscription_form_block'}, {'template':'::/widgets/subscribe_form.html.twig'}) }}
{% endblock subscribe_form %}

{% block content %}
    {% include '::/widgets/themes_panel.html.twig' with {
    'title': 'Профиль пользователя',
    'rubricsContext': null,
    } %}

    <div class="sonata-user-show row row-fluid">


        <div class="span10 col-lg-10">
            {% form_theme form _self %}

            <div class="row auth-block__form">
                <div class="span6 col-lg-6">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h3 class="panel-title auth-block__title">{{ 'sonata_change_password_link'|trans({}, 'SonataUserBundle') }}</h3>
                        </div>
                        <div class="panel-body">
                            <form id="sonata_user_profile_form" action="{{ path('sonata_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password form-horizontal">
                                <div>
                                    {{ form_label(form.current_password) }}
                                    {{ form_widget(form.current_password) }}
                                    {{ form_errors(form.current_password) }}
                                </div>
                                <div>
                                    {{ form_label(form.new.first) }}
                                    {{ form_widget(form.new.first) }}
                                    {{ form_errors(form.new.first) }}
                                </div>
                                <div>
                                    {{ form_label(form.new.second) }}
                                    {{ form_widget(form.new.second) }}
                                    {{ form_errors(form.new.second) }}
                                </div>
                                {{ form_widget(form._token) }}
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-danger pull-right"><i class="icon-lock icon-white glyphicon glyphicon-lock"></i>&nbsp;{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</button>
                                    <a class="user-profile__form-link" href="{{ path('sonata_user_profile_edit') }}">{{ 'sonata_user_profile_breadcrumb_edit'|trans({}, 'SonataUserBundle') }}</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock content %}
